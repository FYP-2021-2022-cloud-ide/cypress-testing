{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "types": ["cypress", "node", "cypress-wait-until"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "esnext",
    "outDir": "out/",
    "incremental": true,
    "sourceMap": true,
    "noEmit": false
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "cypress/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
